<launch>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
    <remap from="cmd_vel" to="/cmd_vel_mux/input/navi" />
    <!-- remap from="cmd_vel" to="navi_velocity_smoother/move_base_raw_cmd_vel" /-->
    
    <rosparam file="$(find pi_kobuki_nav)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find pi_kobuki_nav)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find pi_kobuki_nav)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find pi_kobuki_nav)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find pi_kobuki_nav)/config/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find pi_kobuki_nav)/config/move_base_params.yaml" command="load" />
    
  </node>
  
</launch>
