<launch>
  <param name="use_sim_time" value="false" />

  <!-- Set the name of the map yaml file: can be overridden on the command line. -->
  <arg name="map" default="living_room.yaml" />
  
  <!-- Launch move_base and load all navigation parameters -->
  <include file="$(find pi_kobuki_nav)/launch/move_base.launch" />
    
  <!-- Run the map server with the desired map -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find pi_kobuki_nav)/maps/$(arg map)" />

</launch>
